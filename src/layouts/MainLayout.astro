---
import NavBar from '@/components/shared/NavBar.astro';

interface Props {
    title?: string;
}
const { title = 'Auth Astro app'} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator}>
    <title>{title}</title>
</head>
<body>
    <NavBar/>
    <main class="container m-auto max-w-6xl px-5">
        <slot/> 
    </main>
</body>
</html>